<html>
<head>
<title>Calculator</title>
	<link rel="stylesheet" type="text/css"  href="main.css">
	<!-- <script src="file.js"></script> -->
</head>
<body>
<center>
<div id="calculator">
	<!-- Screen and clear key -->
	<div class="top">
		<span class="clear">C</span>
	<div><input type="text" id="result" size="20"></div>
</div>

	<div class="keys">
		<!-- operators and other keys -->
	<div id = "keys"><span><input type="button" value="7" name="no" onclick="moveNumbers(this.value)"></span></div>  

	<span><input type="button" value="8" name="no" onclick="moveNumbers(this.value)"></span>
	<span><input type="button" value="9" name="no" onclick="moveNumbers(this.value)"></span>
		<span class="operator">+</span>
		<span><input type="button" value="4" name="no" onclick="moveNumbers(this.value)"></span>
		<span><input type="button" value="5" name="no" onclick="moveNumbers(this.value)"></span>
		<span><input type="button" value="6" name="no" onclick="moveNumbers(this.value)"></span>
		<span class="operator">-</span>
		<span><input type="button" value="1" name="no" onclick="moveNumbers(this.value)"></span>
		<span><input type="button" value="2" name="no" onclick="moveNumbers(this.value)"></span>
		<span><input type="button" value="3" name="no" onclick="moveNumbers(this.value)"></span>
		<span class="operator">รท</span>
		<span><input type="button" value="0" name="no" onclick="moveNumbers(this.value)"></span>
		<span>.</span>
		<span class="eval">=</span>
		<span class="operator">x</span> 
	</div>
</div>

</center>
<script> function moveNumbers(num) { 
    var txt=document.getElementById("result").value; 
    txt=txt + num; 
    document.getElementById("result").value=txt; 
    } 
</script>

</body>
</html>

